<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <Button
        android:id="@+id/actMain_withPaging_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Com paging library"
        app:layout_constraintBottom_toTopOf="@+id/actMain_withoutPaging_bt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/actMain_withoutPaging_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sem paging library"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/actMain_withPaging_bt" />

</androidx.constraintlayout.widget.ConstraintLayout>